<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    tools:context=".MyProfile">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="100dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/chusan"
        android:id="@+id/img_avatar"
        />

    <TextView
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edt_full_name"
        android:hint=""
        android:textColorHint="@color/black"
        android:fontFamily="@font/avobold"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edt_email"
        android:hint="Email Demo"
        android:layout_marginTop="30dp"
        android:textColorHint="@color/black"
        android:gravity="center"
        android:fontFamily="@font/avoitalic"
        android:textSize="20sp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/btn_update_profile"
        android:text="Cập nhật"
        android:textSize="20sp"
        android:fontFamily="@font/avo"
        android:backgroundTint="@color/main_green"
        android:textAllCaps="false"
        android:layout_marginTop="150dp"
        />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:fontFamily="@font/avo"
        android:textAllCaps="false"
        android:text="@string/str_thoat"
        android:backgroundTint="@color/btn_orther"
        />


</LinearLayout>