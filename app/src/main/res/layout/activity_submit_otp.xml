<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context=".SubmitOTP">


    <TextView
        android:layout_marginTop="150dp"
        android:layout_marginBottom="100dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác thực OTP"
        android:fontFamily="@font/avobold"
        android:textColor="@color/main_green"
        android:layout_gravity="center"
        android:textSize="30dp"
        />

    <EditText
        android:background="@drawable/border_color_textbox"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:hint="Enter OTP Code"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:id="@+id/edt_submit_otp"
        android:layout_gravity="center"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="Submit OTP Code"
        android:id="@+id/btn_submit_otp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/main_green"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:fontFamily="@font/avo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi lại OTP"
        android:layout_gravity="center"
        android:padding="10dp"
        android:textSize="15sp"
        android:id="@+id/tv_send_otp_again"
        />


</LinearLayout>